<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/login_bg"

    tools:context="com.qamber.carpiker.Activity.Login">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_email"
  android:layout_above="@+id/edt_signin_email"
    android:layout_alignParentTop="true"
    >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
android:background="@drawable/top_logo"

    />

</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please login with your email \nand password"
        android:textColor="@color/colorDarkgrey"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@+id/rl_email"
        />
    <EditText
android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
android:layout_centerInParent="true"
android:layout_marginRight="@dimen/_70sdp"
        android:ems="10"
        android:drawablePadding="@dimen/_10sdp"
android:drawableLeft="@drawable/email_icon"
        android:id="@+id/edt_signin_email"
        android:paddingLeft="@dimen/_10sdp"
        android:textColorHint="@color/colorLightgrey"
        android:layout_marginTop="@dimen/_50sdp"
android:textColor="@color/colorLightgrey"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_.@"
android:drawableBottom="@drawable/separator_fields"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Pasword"
        android:textColor="@color/colorLightgrey"
        android:drawablePadding="@dimen/_10sdp"
        android:id="@+id/edt_signin_password"
        android:textAlignment="gravity"
        android:singleLine="true"
      android:paddingLeft="@dimen/_10sdp"
        android:drawableLeft="@drawable/password_icon"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_.@!#$%^*()_+*/"
      android:layout_below="@+id/edt_signin_email"
        android:textColorHint="@color/colorLightgrey"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_forget"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Forgot Password?"
  android:layout_below="@+id/edt_signin_password"
android:layout_centerHorizontal="true"
        android:textColor="@color/colorblack"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_forget"
        android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_35sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:background="@drawable/separator_fields"
    android:layout_marginRight="@dimen/_35sdp"
    />


            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/iv_fb"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/fb_login"
               android:layout_toLeftOf="@+id/iv_twitter"
                />




        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/iv_google"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/google_login"
           android:layout_toRightOf="@+id/iv_twitter"
            />


            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/iv_twitter"
                android:layout_marginTop="@dimen/_30sdp"

                android:background="@drawable/twitter_login"
                android:layout_centerHorizontal="true"
                />


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Not Registered yet?"
        android:textSize="@dimen/_10sdp"
        android:id="@+id/tv_dnt_account"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_toLeftOf="@+id/tv_signup"
        android:layout_marginLeft="@dimen/_25sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
      android:layout_marginRight="@dimen/_20sdp"
        android:text="SignUp"
        android:layout_alignParentBottom="true"
android:layout_toLeftOf="@+id/iv_continue"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:id="@+id/tv_signup"
        android:textColor="@color/colorBlue"
        android:layout_marginBottom="@dimen/_20sdp"
        />




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/continue_btn"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_continue"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>


