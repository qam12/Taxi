<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qamber.carpiker.Activity.EnterPhone">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_email"
        android:layout_above="@+id/edt_signin_email"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/top_logo"

            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your phone number for\n verfication"
        android:textColor="@color/colorDarkgrey"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@+id/rl_email"
        />
    <Spinner
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
android:id="@+id/spn_phn"
        >


    </Spinner>
    <EditText
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter Phone Number"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/_90sdp"
        android:ems="10"
        android:drawablePadding="@dimen/_10sdp"
        android:id="@+id/edt_signin_email"
        android:paddingLeft="@dimen/_10sdp"
        android:textColorHint="@color/colorLightgrey"
        android:layout_marginTop="@dimen/_50sdp"
        android:textColor="@color/colorLightgrey"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_.@"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Not received code?"
        android:textSize="@dimen/_10sdp"
        android:id="@+id/tv_dnt_account"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_toLeftOf="@+id/tv_signup"
        android:layout_marginLeft="@dimen/_25sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:text="Resend"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/iv_continue"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:id="@+id/tv_signup"
        android:textColor="@color/colorBlue"
        android:layout_marginBottom="@dimen/_20sdp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/continue_btn"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_continue"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
